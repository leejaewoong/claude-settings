"""
Celery application configuration
"""
from celery import Celery
from app.config import settings

# Create Celery app
celery_app = Celery(
    "sentiment_curator",
    broker=settings.CELERY_BROKER_URL,
    backend=settings.CELERY_RESULT_BACKEND,
    include=["app.tasks.crawler_tasks"],
)

# Celery configuration
celery_app.conf.update(
    task_serializer="json",
    accept_content=["json"],
    result_serializer="json",
    timezone="UTC",
    enable_utc=True,
    task_track_started=True,
    task_time_limit=30 * 60,  # 30 minutes
    task_soft_time_limit=25 * 60,  # 25 minutes
    worker_prefetch_multiplier=1,
    worker_max_tasks_per_child=50,
)

# Beat schedule - run crawler every 3 hours
celery_app.conf.beat_schedule = {
    "crawl-naver-cafe-every-3-hours": {
        "task": "app.tasks.crawler_tasks.crawl_and_save_naver_cafe",
        "schedule": 3 * 60 * 60.0,  # 3 hours in seconds
        "options": {
            "expires": 2 * 60 * 60,  # Task expires after 2 hours if not executed
        },
    },
}
