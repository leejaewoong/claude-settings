'use client'

import { Checkbox, IconButton } from "@material-tailwind/react"

interface TodoProps {
    id: number;
    value: string;
    completed: boolean;
}

export default function Todo({ id, value, completed }: TodoProps) {
    return (
        <div className="flex items-center w-full gap-3">
            <Checkbox checked={completed} {...({} as any)} />

            <p className={`flex-1 ${completed ? "line-through" : ""}`}>{value}</p>

            <IconButton variant="text" {...({} as any)}>
                <i className="fas fa-pen" />
            </IconButton>
            <IconButton variant="text" {...({} as any)}>
                <i className="fas fa-trash" />
            </IconButton>
        </div>
    )
}