"""
Sentiment-Curator Backend
FastAPI application entry point
"""
from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware

from app.config import settings
from app.core.database import engine
from app.api import auth, config, crawler, history

# Initialize Sentry (optional)
try:
    import sentry_sdk

    if settings.SENTRY_DSN:
        sentry_sdk.init(
            dsn=settings.SENTRY_DSN,
            environment=settings.ENVIRONMENT,
            traces_sample_rate=0.1,
        )
except ImportError:
    # Sentry SDK not installed - skip monitoring
    pass

# Create FastAPI app
app = FastAPI(
    title="Sentiment-Curator API",
    description="AI-powered PUBG community curator",
    version="0.1.0",
    docs_url="/docs",
    redoc_url="/redoc",
)

# CORS middleware
app.add_middleware(
    CORSMiddleware,
    allow_origins=settings.CORS_ORIGINS,
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)


@app.on_event("startup")
async def startup():
    """Startup event handler"""
    # Database connection will be handled per request
    pass


@app.on_event("shutdown")
async def shutdown():
    """Shutdown event handler"""
    await engine.dispose()


@app.get("/health")
async def health_check():
    """Health check endpoint"""
    return {"status": "healthy"}


@app.get("/")
async def root():
    """Root endpoint"""
    return {
        "name": "Sentiment-Curator API",
        "version": "0.1.0",
        "docs": "/docs",
    }


# Include routers
app.include_router(auth.router, prefix="/api/auth", tags=["auth"])
app.include_router(config.router, prefix="/api/config", tags=["config"])
app.include_router(crawler.router, prefix="/api/crawler", tags=["crawler"])
app.include_router(history.router, prefix="/api/history", tags=["history"])
